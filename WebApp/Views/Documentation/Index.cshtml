@model IEnumerable<WebApp.Models.CompCard>

<div class="container">
    @foreach (var card in Model)
    {
        <div class="card" id="card-@card.Id">
            <!-- Image Rendering -->
            <img src="data:image/png;base64,@(Convert.ToBase64String(card.img))"
                 alt="@card.title"
                 onclick="zoomImage('data:image/png;base64,@(Convert.ToBase64String(card.img))')" />

            <!-- Download Icon -->
            <div class="download-icon" onclick="downloadPDF('@Url.Action("DownloadPDF", "Admin", new { id = card.title })')">
                <i class="fas fa-download"></i>
            </div>

            <!-- Card Description -->
            <div class="card-description">
                @card.description
            </div>
        </div>
    }
</div>

<div id="zoom-overlay" onclick="closeZoom()">
    <img src="" alt="Zoomed Image" id="zoomed-img">
</div>

<script>
    function zoomImage(src) {
        const overlay = document.getElementById('zoom-overlay');
        const zoomedImg = document.getElementById('zoomed-img');
        zoomedImg.src = src;
        overlay.style.display = 'flex';
    }

    function closeZoom() {
        const overlay = document.getElementById('zoom-overlay');
        overlay.style.display = 'none';
    }

    function downloadPDF(file) {
        const link = document.createElement('a');
        link.href = file;
        link.download = 'download.pdf';
        link.click();
    }
</script>






