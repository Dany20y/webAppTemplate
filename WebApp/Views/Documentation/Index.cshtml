@model IEnumerable<WebApp.Models.CompCard>

<h2>Cards</h2>

@if (Model == null || !Model.Any())
{
    <p>No cards available to display.</p>
}
else
{
    <div class="card-container">
        @foreach (var card in Model)
        {
            <div class="card">
                <img src="@card.img" alt="@card.title" />
                <div class="card-content">
                    <h3>@card.title</h3>
                    <p>@card.description</p>
                    @if (!string.IsNullOrEmpty(card.pdf_file))
                    {
                        <a href="@card.pdf_file" download class="btn-download">Download PDF</a>
                    }
                </div>
            </div>
        }
    </div>
}
